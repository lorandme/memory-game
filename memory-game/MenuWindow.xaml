<Window x:Class="memory_game.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:memory_game"
        mc:Ignorable="d"
        Title="Memory Game Menu" Height="350" Width="300">
    <Window.DataContext>
        <local:MenuViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="New Game" Width="150" Height="30" Margin="5" Command="{Binding NewGameCommand}"/>
            <Button Content="Load Game" Width="150" Height="30" Margin="5" Command="{Binding OpenGameCommand}"/>
            <Button Content="Statistics" Width="150" Height="30" Margin="5" Command="{Binding ShowStatisticsCommand}"/>
            <Button Content="About" Width="150" Height="30" Margin="5" Command="{Binding ShowAboutCommand}"/>
            <Button Content="Exit" Width="150" Height="30" Margin="5" Command="{Binding ExitCommand}"/>
        </StackPanel>
    </Grid>
</Window>