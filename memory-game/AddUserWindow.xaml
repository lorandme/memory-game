<Window x:Class="memory_game.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:memory_game"
        mc:Ignorable="d"
        Title="Add User" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Username input -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Enter Username:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox FontSize="14" Padding="5"/>
        </StackPanel>

        <!-- Profile image selection -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Select Profile Image:" FontSize="16" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="◀" FontSize="24" Width="40" Height="40"
                        VerticalAlignment="Center" Margin="0,0,10,0"/>

                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
                    <Grid>
                        <Image Stretch="Uniform" Width="200" Height="150"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                   Margin="0,0,0,5"/>
                    </Grid>
                </Border>

                <Button Grid.Column="2" Content="▶" FontSize="24" Width="40" Height="40"
                        VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Create User" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
